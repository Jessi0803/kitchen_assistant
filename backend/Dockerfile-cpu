# Dockerfile for Kitchen Assistant Backend (YOLO Detection Service - CPU Optimized)
# Optimized for AWS EC2 t3.micro (1 vCPU, 1GB RAM, 8GB Disk)

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies (minimal for OpenCV and YOLO)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements-docker-cpu.txt requirements.txt

# Install Python dependencies (CPU-only torch to save space)
# Using --no-cache-dir and combining layers to minimize disk usage
RUN pip install --no-cache-dir -r requirements.txt && \
    rm -rf /tmp/* /root/.cache

# Copy application code (Docker-optimized version without Ollama)
COPY main-docker.py main.py

# Copy YOLO model
COPY best.pt ./best.pt

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health', timeout=5)" || exit 1

# Run FastAPI with uvicorn
# Using 1 worker to minimize memory usage on t3.micro
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
